<div class="d-flex justify-content-between mb-3">
  <h4>Drill Groups</h4>
  <%= link_to 'Add Group', new_drillgroup_path, class: 'btn btn-success' %> 
</div>
<% @drillgroups.each do |drillgroup| %> 
  <div class="card p-2 mb-2">
    <div class="card-body d-flex justify-content-between align-items-center">
      <h5><%= drillgroup.title %> </h5>
      <div>
        <%= link_to(
          'View', 
          drillgroup_path(drillgroup),
          class: 'btn btn-primary'
        )%>
        <%= link_to(
          'Edit', 
          edit_drillgroup_path(drillgroup),
          class: 'btn btn-primary'
        )%>
        <%= link_to(
          'Delete', 
          drillgroup_path(drillgroup),
          class: 'btn btn-danger',
          method: :delete,
          data: {confirm: 'Are you sure you want to delete this group?'}
        )%>
      </div>
    </div>
  </div>
<% end %> 