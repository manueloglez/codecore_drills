
<div class="card m-3 p-3" style="height: 15rem;">
  <div class="card-body d-flex flex-column align-items-center justify-content-between">
    <% if @point.score >= 50 %>
      <h1>Congratulations, you passed!</h1>
    <% else %>
      <h1>Why don't you give it another shot?</h1>
    <% end %>
    <h2>Your score is: <%= @point.score %></h2>
    <h4> <%= params[:correct_answers] %> out of <%= params[:answers_count] %> </h4>
    <%= link_to 'Return to My Drills', mydrills_path %>
  </div>
</div>